<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:id="@+id/ivFriendPhoto"
                android:layout_gravity="center_horizontal"
                android:src="@android:mipmap/sym_def_app_icon" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/imageView7"
                android:src="#9affffff"
                android:layout_gravity="left|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/tvFriendName"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/tvFriendStatus"
                android:layout_gravity="left|bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="5dp"
                android:id="@+id/flBdComing"
                android:visibility="gone">

                <ImageView
                    android:layout_width="255dp"
                    android:layout_height="60dp"
                    android:id="@+id/ivIsComing"
                    android:src="#9affffff"
                    android:layout_gravity="right|top" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|top">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView8"
                        android:src="@drawable/birthdaycake"
                        android:layout_gravity="right|bottom"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="@string/birthdayClose"
                        android:textColor="@color/colorAccent"
                        android:id="@+id/textView10"
                        android:layout_gravity="center"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp" />
                </LinearLayout>
            </FrameLayout>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/wishList"
            android:id="@+id/textView9"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/lvFriendsWhishList"
            android:layout_gravity="center_horizontal|bottom" />
    </LinearLayout>

</LinearLayout>